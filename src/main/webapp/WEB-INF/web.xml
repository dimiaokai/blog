<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>ketayao.com</display-name>
  <filter>
    <filter-name>global</filter-name>
    <filter-class>com.ketayao.fensy.mvc.FensyFilter</filter-class>
    <init-param>
      <param-name>domain</param-name>
      <param-value>localhost</param-value>
    </init-param>
    <init-param>
      <param-name>templatePathPrefix</param-name>
      <param-value>/WEB-INF</param-value>
    </init-param>
    <init-param>
      <param-name>viewList</param-name>
      <param-value>com.ketayao.fensy.mvc.view.FreeMarkerView</param-value>
    </init-param>
    <init-param>
      <param-name>interceptors</param-name>
      <param-value>com.ketayao.interceptor.CustomerInterceptor</param-value>
    </init-param>
    <init-param>
      <param-name>exceptionHandler</param-name>
      <param-value>com.ketayao.handler.EmailExceptionHandler</param-value>
    </init-param>
    <init-param>
      <param-name>ignore</param-name>
      <param-value>/static/</param-value>
    </init-param>
    <init-param>
      <param-name>ignoreExts</param-name>
      <param-value>swf,ico,css,js,jpg,jpeg,gif,png,bmp,doc,xls,pdf,txt,html,htm,zip,rar,xml</param-value>
    </init-param>
    <init-param>
      <param-name>default</param-name>
      <param-value>/www</param-value>
    </init-param>
    <init-param>
      <param-name>packages</param-name>
      <param-value>com.ketayao.action</param-value>
    </init-param>
    <init-param>
      <param-name>url-pattern-prefix</param-name>
      <param-value>/action/</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>global</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>SystemInitialize</servlet-name>
    <servlet-class>com.ketayao.system.SystemInitServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/WEB-INF/www/500.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/WEB-INF/www/500.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/www/404.jsp</location>
  </error-page>
  <error-page>
    <error-code>403</error-code>
    <location>/WEB-INF/www/403.jsp</location>
  </error-page>
</web-app>